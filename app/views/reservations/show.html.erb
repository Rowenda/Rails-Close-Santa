<h1>reservation show</h1>

<p><%= @reservation.event_adress %></p>
<p><%= @reservation.start_time %></p>
<p><%= @reservation.end_time %></p>
<p><%= @reservation.status %></p>

<%# if the current user is the user who created the offer linked to the reservation %>
<% if @reservation.offer.user.id == current_user.id %>
  <% if @reservation.status == "pending" %>
    <%= link_to "accept", reservation_accept_status_path(@reservation) %>
    <%= console %>
    <%= button_to "reject", { :action => "destroy", :id => @reservation.id },
          :confirm => "Are you sure?", :method => :delete %>
  <% end %>
<% end %>

<%# if the current user is the user who created the reservation %>
<% if @reservation.user.id == current_user.id %>
  <% if @reservation.status == "pending" %>
    <%= button_to "cancel", { :action => "destroy", :id => @reservation.id },
        :confirm => "Are you sure?", :method => :delete %>
  <% end %>
<% end %>
